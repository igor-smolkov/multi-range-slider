  options.name
  options.options [{value, label, isChecked, isDisabled}]
  options.isCol

mixin radio-group(options = {})
  - const blockName = "radio-group"
  - const set = ("options" in options) ? options.options : []

  DIV(
    class=blockName
    class=options.isCol ? `${blockName}_col` : ""
  )
    each option, index in set
      LABEL(
        class=`${blockName}__option`
        class=(index === 0) ? `${blockName}__option_first` : ""
      )
        INPUT(
          class=`${blockName}__box`
          type="radio"
          name=options.name
          value=option.value ? option.value : index
          checked=option.isChecked ? true : false
          disabled=option.isDisabled ? true : false
        )
        DIV(
          class=`${blockName}__label`
          class=option.isChecked ? `${blockName}__label_checked` : ""
          class=(index === 0) ? `${blockName}__label_first` : ""
        )=option.label
  