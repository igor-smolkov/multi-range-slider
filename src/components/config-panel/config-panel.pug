include ../form-set/form-set.pug
include ../text-field/text-field.pug
include ../radio-group/radio-group.pug
include ../toggle/toggle.pug

mixin config-panel
  .config-panel.js-config-panel
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Минимальное значение" })
        +text-field({ value: "0", type: "number", name: 'min', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Максимальное значение" })
        +text-field({ value: "100", type: "number", name: 'max', isDisabled: true  })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Текущее значение" })
        +text-field({ value: "50", type: "number", name: 'value', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Шаг" })
        +text-field({ value: "1", type: "number", name: 'step', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Ориентация" })
        +radio-group({
          name: "orientation",
          options: [
            {label: "Горизонтальная", value: "horizontal", isChecked: true, isDisabled: true },
            {label: "Вертикальная", value: "vertical", isDisabled: true},
          ],
        })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Режим двойного слайдера" })
        +toggle({ label: "Включить", name: 'is-double', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Минимальный интервал" })
        +text-field({ value: "25", type: "number", name: 'min-interval', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Максимальный интервал", isDisabled: true })
        +text-field({ value: "75", type: "number", name: 'max-interval', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Активный диапазон" })
        +text-field({ value: "0", type: "number", name: 'active', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Лимиты" })
        +text-field({ value: "0, 25, 75, 100", type: "text", name: 'limits', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Режим с подписью" })
        +toggle({ label: "Включить", name: 'with-label', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Вид подписи" })
        +radio-group({
          name: "label",
          options: [
            {label: "Число", value: "number", isChecked: true, isDisabled: true },
            {label: "Имя", value: "name", isDisabled: true},
          ],
        })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Вид шкалы" })
        +radio-group({
          name: "scale",
          options: [
            {label: "Без подписей", value: "basic", isChecked: true, isDisabled: true },
            {label: "Числовая", value: "numeric", isDisabled: true},
            {label: "Именная", value: "named", isDisabled: true},
          ],
        })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Количество сегментов шкалы" })
        +text-field({ value: "100", type: "number", name: 'segments', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Режим шкалы с засечками" })
        +toggle({ label: "Включить", name: 'with-notch', isChecked: true, isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Актуальные диапазоны" })
        +text-field({ value: "1", type: "text", name: 'actual-ranges', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Длина в пикселях" })
        +text-field({ value: "1000", type: "number", name: 'length-px', isDisabled: true })
    .config-panel__set.config-panel__set_none
      +form-set({ title: "Режим с отступами" })
        +toggle({ label: "Включить", name: 'with-indent', isChecked: true, isDisabled: true })